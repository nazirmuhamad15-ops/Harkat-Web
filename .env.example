# ==============================================
# HARKAT FURNITURE - Environment Configuration
# ==============================================

# ----------------------------------------------
# Database Configuration
# ----------------------------------------------
# PostgreSQL connection string with PgBouncer (for serverless)
DATABASE_URL="postgresql://user:password@host:6543/database?pgbouncer=true"

# Direct PostgreSQL connection (for migrations)
DIRECT_URL="postgresql://user:password@host:5432/database"

# ----------------------------------------------
# Authentication
# ----------------------------------------------
# Generate a secure secret: openssl rand -base64 32
NEXTAUTH_SECRET="your-secret-here-change-this-in-production"

# Your application URL
NEXTAUTH_URL="http://localhost:3000"

# Base URL for webhooks and redirects
NEXT_PUBLIC_BASE_URL="http://localhost:3000"

# ----------------------------------------------
# WhatsApp Bot Service
# ----------------------------------------------
# URL of your deployed WhatsApp bot service
WHATSAPP_SERVICE_URL="https://your-bot-service.railway.app"
WHATSAPP_BOT_URL="https://your-bot-service.railway.app"

# ----------------------------------------------
# Google Maps API
# ----------------------------------------------
# Get your API key from: https://console.cloud.google.com/
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY="your-google-maps-api-key"

# ----------------------------------------------
# Email Service (Resend)
# ----------------------------------------------
# Get your API key from: https://resend.com/api-keys
RESEND_API_KEY="re_your_resend_api_key"
EMAIL_FROM="admin@yourdomain.com"

# ----------------------------------------------
# Payment Gateway - Pakasir
# ----------------------------------------------
# Get credentials from: https://app.pakasir.com/
PAKASIR_SLUG="your-pakasir-slug"
PAKASIR_API_KEY="your-pakasir-api-key"
PAKASIR_SANDBOX="true"  # Set to "false" for production

# ----------------------------------------------
# Cloudflare R2 Storage
# ----------------------------------------------
# Get from Cloudflare Dashboard > R2 > Manage R2 API Tokens
# Setup Guide:
# 1. Go to Cloudflare Dashboard > R2
# 2. Create a bucket (e.g., "harkat-uploads")
# 3. Go to "Manage R2 API Tokens" > Create API Token
# 4. Set permissions: Object Read & Write
# 5. Copy the credentials below

R2_ACCOUNT_ID="your-cloudflare-account-id"
R2_ACCESS_KEY_ID="your-r2-access-key-id"
R2_SECRET_ACCESS_KEY="your-r2-secret-access-key"
R2_BUCKET_NAME="harkat-uploads"
R2_PUBLIC_URL="https://your-bucket.your-account.r2.dev"  # Or custom domain

# ----------------------------------------------
# Google OAuth (for login)
# ----------------------------------------------
# Get from Google Cloud Console > APIs & Services > Credentials
GOOGLE_CLIENT_ID="your-google-client-id.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# ----------------------------------------------
# Google Gemini AI
# ----------------------------------------------
# Get from: https://aistudio.google.com/app/apikey
GOOGLE_GENERATIVE_AI_API_KEY="your-gemini-api-key"

# ----------------------------------------------
# Optional: Development Settings
# ----------------------------------------------
# NODE_ENV="development"
# NEXT_PUBLIC_APP_URL="http://localhost:3000"

# ----------------------------------------------
# Optional: Monitoring & Analytics
# ----------------------------------------------
